.content
  padding 16px

.toolbar
  width 100%
  height 30px
  background-color $palette--1j
  display: flex;
  align-items: center;

.side-nav-container
  position: absolute !important
  top: 0 !important
  left: 0 !important
  bottom: 0 !important
  right: 0 !important

.side-nav
  width 200px
  height 100%
  display: block;
  overflow: hidden;
  padding: 16px;

.menu-link
  cursor pointer

  &:hover
    background-color $palette--1d
